import time
import sys
import uinput

def main():
    events = (
        uinput.REL_X,
        uinput.REL_Y,
        uinput.BTN_LEFT,
        uinput.BTN_RIGHT,
        uinput.KEY_PLAYPAUSE,
        uinput.KEY_MUTE,
        uinput.KEY_VOLUMEUP,
        uinput.KEY_VOLUMEDOWN,
        uinput.KEY_BACK,
        uinput.KEY_HOME,
        uinput.KEY_MENU,
        uinput.KEY_SEARCH,        
        uinput.KEY_UP,
        uinput.KEY_DOWN,
        uinput.KEY_LEFT,
        uinput.KEY_RIGHT,
        uinput.KEY_ENTER,

        )

    with uinput.Device(events) as device:
        time.sleep(0.0666)
            # syn=False to emit an "atomic" (5, 5) event.
        line = sys.stdin.readline()
        while line:
          a = line.split(" ")
          e = events[int(a[0])]
          v = int(a[1])
          s = int(a[2]) == 1
          device.emit(e, v, s)
          line = sys.stdin.readline()

if __name__ == "__main__":
    main()
